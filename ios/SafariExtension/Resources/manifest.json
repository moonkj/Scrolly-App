{
  "manifest_version": 2,
  "name": "Scrolly",
  "version": "1.0",
  "description": "Automatic webpage scroller with speed control",

  "icons": {
    "16":  "images/icon-16.png",
    "32":  "images/icon-32.png",
    "48":  "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "images/icon-16.png",
      "32":  "images/icon-32.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "js":      ["content.js"],
      "matches": ["<all_urls>"],
      "run_at":  "document_idle"
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
